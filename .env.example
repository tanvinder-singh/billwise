PORT=3000
JWT_SECRET=change-this-to-a-random-secret-string

# PostgreSQL connection string
DATABASE_URL=postgresql://billwise:your_strong_password_here@localhost:5432/billwise_db

# AWS SES SMTP for email OTP (leave blank → dev mode logs OTP to console)
# Get SMTP credentials: AWS Console > SES > SMTP Settings > Create SMTP Credentials
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_ses_smtp_username
SMTP_PASS=your_ses_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Twilio for phone OTP (leave blank → dev mode logs OTP to console)
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE=
